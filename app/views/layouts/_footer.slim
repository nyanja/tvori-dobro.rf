footer.sheet.footer-container
  .main-width
    .footer.mx-3.py-4.d-flex.jc-sb.ai-center
      .footer-col
        .nowrap
          i.far.fa-copyright
          = " Твори Добро 2018 – #{Time.current.year}"
        .d-flex.mt-2.fs-l.jc-center
          = render "layouts/socials"

      .footer-col.d-flex.flex-wrap.mx-4.jc-center
        =link_to "Новости", :root, class: "mx-4 my-1"
        =link_to "Контакты", 'contacts', class: "mx-4 my-1"
        =link_to "О нас",    'about', class: "mx-4 my-1"

      .footer-col.nowrap.text-center
        a href="tel:#{site_phone}" = site_phone
        br
        a href="mailto:#{site_mail}" = site_mail
        .small.fw-1.c-label.mt-1 разработка Nyan Cat
